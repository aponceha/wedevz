<!-- CAROUSEL SECTION -->
  
  <div class="w3-row-padding" style="display:flex; padding-bottom: 30px; padding-top: 30px; justify-content: center; align-items: center">
    <button class="w3-button" style="background-color: white; color: black; height:40px" onclick="plusDivs(-1)">&#10094;</button>
    {{#each usergallery as |user|}}
    <div class=" w3-container w3-margin-bottom" style="width:30%; justify-content: center;">
      <img src=`/public/images/${userpic}` alt="Norway" style="width:90%" class="w3-hover-opacity">
      <div class="w3-container w3-white" style="border-radius: 30px;">
        <p style="font-size:24px"><b>{{user.first_name}} {{user.last_name}}</b></p>
        <p style="font-style: italic">{{user.city}}</p>
        <p style="font-style: italic">{{user.employer}}</p>
        <ul style="list-style: none">
            {{#each user.technology as |tech|}}
            <li >{{tech.name}}</li>
            {{/each}}
        </ul>
        <p>{{user.github}}</p>
      </div>
    </div>
    {{/each}}
    <button class="w3-button" style="background-color: white; color: black" onclick="plusDivs(1)">&#10095;</button>
  </div>
  

  <header class="w3-container w3-padding-32 w3-center w3-black" id="home">
    <p>Explore Projects</p>
    <i class="fa-regular fa-square-share-nodes fa-10px" style="color:#68447A; width:100px; height:100px"></i>
  </header>
  <!-- Second Photo Grid-->
    <div class="w3-row-padding" style="display:flex; justify-content: center; padding-top: 30px; align-items: center;">
        <button class="w3-button" style="background-color: white; color: black; height:40px" onclick="plusDivs(-1)">&#10094;</button>
        <!--CARD START -->
        {{#each projectgallery as |project|}}
        <div class=" w3-container w3-margin-bottom" style="width:530px; height: 696px; border: rgb(162, 192, 212) 10px solid; border-radius: 30px; margin-left: 15px;">
            <!-- PROJECT TEXT BOX -->
            <div class="w3-container w3-white" style="margin-top: 15px; border-radius: 30px;">
                <p><b>{{project.name}}</b></p>
                <p>{{project.description}}</p>
                {{#each project.technology as |tech|}}
                <p>{{tech.name}}</p>
                {{/each}}
                <p>{{project.link}}</p>
            </div>
            <!-- BOTTOM HALF CARD DIV -->
            <div class="w3-container" style="display:inline; justify-content: baseline;">
                <!-- IMAGE HALF ROW -->
                <img src=`${project.user.url}` alt="Norway" style="width:50%; padding-top: 15px;" class="w3-hover-opacity">
                <!-- NAME LOCATION FIELDS -->
                <div style="display:inline-block; padding-left: 5px">
                    <p style="display:block; padding-top: 15px"><b>{{project.first_name}} {{project.last_name}}</b></p>
                    <p style="display:block; font-style: italic"><b>{{city}}</b></p>
                </div>
                <!-- Technologies  -->
                <div class="w3-container w3-white" style="padding-top: 5px; border-radius: 30px;">
                    <p> Technologies Specialization</p>
                    {{#each user.technology as |tech|}}
                    <li >{{tech.name}}</li>
                    {{/each}}
                </div>
            
            <!-- END OF BOTTOM HALF CARD DIV -->
            </div> 
        </div>
        <!-- END OF CARD -->       
        <button class="w3-button" style="background-color: white; color: black" onclick="plusDivs(1)">&#10095;</button>
    </div>