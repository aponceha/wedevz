<!-- Page Content -->
<div class="w3-padding-large" id="main">
<h2>Edit Profile</h2>

<div class="container">
  <form  method="post" id="update-profile-form">
    <div class="row">
      <div class="col-25">
        <label for="fname">First Name</label>
      </div>
      <div class="col-75">
        <input type="text" id="profile_fname" name="firstname" placeholder="Your name.." value="{{first_name}}" required>
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="lname">Last Name</label>
      </div>
      <div class="col-75">
        <input type="text" id="profile_lname" name="lastname" placeholder="Your last name.." value="{{last_name}}" required>
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="age">Age</label>
      </div>
      <div class="col-75">
        <input type="text" id="profile_age" name="age" placeholder="Your age.." value="{{age}}" required>
      </div>
    </div>
    <div class="row">
        <div class="col-25">
          <label for="description">Tell us about yourself</label>
        </div>
        <div class="col-75">
          <textarea id="profile_description" name="description" placeholder="Write something.." value="{{bio}}" style="height:100px" required></textarea>
        </div>
    </div>
    
    <div class="row">
        <div class="col-25">
          <label for="technologies">Technologies</label>
        </div>
        <div class="col-75">
            <input type="text" id="profile_technologies" name="technologies" placeholder="Technologies.." value="{{user_technology}}">
        </div>
    </div>
    <div class="row">
        <div class="col-25">
          <label for="github">Github</label>
        </div>
        <div class="col-75">
          <input type="text" id="profile_github" name="github" placeholder="Github.." value="{{github}}">
        </div>
    </div>
   
    <div class="row">
        <div class="col-25">
            <label for="location">Location</label>
        </div>
        <div class="col-75">
            <input type="text" id="profile_location" name="location" placeholder="Location.." value="{{location}}">
        </div>
    </div>
    <div class="row">
        <div class="col-25">
            <label for="employer">Employer</label>
        </div>
        <div class="col-75">
            <input type="text" id="profile_employer" name="employer" placeholder="Enter employer.." value="{{employer}}">
        </div>
    </div>
    <div class="row">
        <div class="col-25">
            <label for="job">Education</label>
        </div>
        <div class="col-75">
            <input type="text" id="profile_education" name="education" placeholder="Enter education.." value="{{education}}">
        </div>
    </div>
    
    <div class="row">
        <div class="col-75"></div>
        <div class="col-25">
             <button type="submit" data-id="{{id}}">Submit</button>
        </div>
    </div>
  </form>
</div>
<!-- Portfolio Section -->
  <div class="w3-padding-64 w3-content" id="projects">
    <h2 class="w3-text-light-grey">My Projects</h2>
    

    <!-- Grid for photos -->
   
    <div class="w3-row-padding" style="margin:0 -16px">
        <div class="row">
             {{#each projects as |prj|}}
            <div class="w3-col m4 d-flex align-items-stretch pcard">
              <div class="card" >
                <h3>{{prj.name}}</h3>
                <p>{{prj.description}}</p>
                <p>{{prj.link}}</p>
                <p class="w3-wide">{{prj.project_technology}}</p>
                
              </div>
            </div>
             {{/each}}
        </div>
    <!-- End photo grid -->
    </div>
  <!-- End Portfolio Section -->
 
  </div>


