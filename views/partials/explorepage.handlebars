<link rel="stylesheet" type="text/css" href="/wedevz/public/css/style.css">
<!-- Page Content -->

<div class="w3-padding-large">
  <!-- Header/Home -->
  <!-------------------------------------------------------------------------- HB -->
  <header class="w3-container w3-padding-32 w3-center w3-black" id="home">
    <h1 class="w3-jumbo"><span class="w3-hide-small">We</span>Devz</h1>
    <h10>Explore Network</h10>
    <i class="fa-regular fa-square-share-nodes fa-10px" style="color:#68447A; width:100px; height:100px"></i>
  </header>
