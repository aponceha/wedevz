<!-- CAROUSEL SECTION -->
  <div class="media-scroller snaps-inline">
    {{#each usergallery as |user|}}
        <!-- pic 1 -->
        <div class="profile-card">
            <img src="https://res.cloudinary.com/dfh56dqku/image/upload/v1675255966/p1-modified_fzitz1.png" alt="Norway" class="w3-hover-opacity">        
            <div class="profile-bottom-card">
              <p style="font-size:24px"><b>{{user.first_name}} {{user.last_name}}</b></p>
              <p style="font-style: italic">City: {{user.location}}</p>
              <p style="font-style: italic">Employer: {{user.employer}}</p>
              <ul style="list-style: none">
                  <li >Expert in: {{user.user_technology}}</li>
              </ul>
              <p>{{user.github}}</p>
            </div>
        </div>
    
      
    {{/each}}
    </div> 
    

    <!-- END OF PROJECT SCROLLER -->
</div>
